<div class="rentals">
    <label for="search">
        <span>Where would you like to stay?</span>
        <Input @value={{this.query}} type="text" id="search" class="light" />
    </label>

    <ul class="results">
        <Rentals::Filter @rentals={{@rentals}} @query={{this.query}} as |results|>
            {{#each results as |rental|}}
            <li>
                <Rental @rental={{rental}} />
            </li>
            {{/each}}
        </Rentals::Filter>
    </ul>
</div>
